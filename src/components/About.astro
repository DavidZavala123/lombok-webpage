<style>
    .img{
        min-height: 500px;
        background-image: url('../images/img-4.webp');
        background-position: center;
        background-size: cover;
    }
    .about{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(min(300px, 100%), 1fr));
    }
    h2{
        font-weight: 400;
        text-align: center;
    }
    .line{
        display: block;
        margin: 1rem auto 3rem;
        width: 30px;
        height: 3px;
        background-color: rgba(62, 67, 61, 1);

    }
    .texts{
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem 5rem;
    }
    .texts p{
        font-size: .8rem;
        line-height: 2;
        color: rgba(62, 67, 61, .7);
        letter-spacing: 1px;
    }
</style>