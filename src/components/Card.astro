---
interface Props {
	text: string;
	img: string;
}

const { text, img } = Astro.props;
---

<figure class="card">
	<img src={img} alt="Image">
	<div class="text">
		<span class="line"></span>
		<p>{text}</p>
	</div>
</figure>


<style>
	.card{
		width: 90%;
		max-width: 300px;
		background-color: rgba(251, 251, 251, 1);
		margin: 0 auto;
		box-shadow: 5px 5px 10px rgba(0, 0, 0, .5);
	}
	img{
		width: 100%;
		height: 200px;
		object-fit: cover;
	}
	.text{
		padding: 4rem 2rem;
	}
	p{
		width: 100%;
		font-size: .75rem;
		text-align: center;
	}
	.line{
        display: block;
        margin: 0 auto 1rem;
        width: 30px;
        height: 3px;
        background-color: rgba(62, 67, 61, 1);
    }
</style>